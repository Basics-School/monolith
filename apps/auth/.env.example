# Database Configuration
# Shared database for platform and all projects
# Projects are isolated using PostgreSQL schemas (project_<id>)
DATABASE_URL=postgresql://postgres:password@localhost:5432/auth_platform

# Better-Auth Configuration
BETTER_AUTH_SECRET=your-super-secret-key-change-this-in-production-min-32-chars
BETTER_AUTH_URL=http://localhost:3001

# Platform Configuration
BASE_DOMAIN=auth-platform.com
# In development, use localhost. In production, use your actual domain
# Example: auth-platform.com
# Projects will be accessible at: {subdomain}.auth-platform.com
# Each project uses the same database with isolated PostgreSQL schemas

# Frontend URLs (for CORS and OAuth redirects)
NEXTJS_URL=http://localhost:3000
API_URL=http://localhost:6000

# Node Environment
NODE_ENV=development

# Optional: OAuth Providers for Platform Authentication
# GitHub OAuth
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# Google OAuth
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Microsoft OAuth
MICROSOFT_CLIENT_ID=
MICROSOFT_CLIENT_SECRET=
MICROSOFT_TENANT_ID=common

# Discord OAuth
DISCORD_CLIENT_ID=
DISCORD_CLIENT_SECRET=

# LinkedIn OAuth
LINKEDIN_CLIENT_ID=
LINKEDIN_CLIENT_SECRET=

# Cookie Configuration (production)
COOKIE_DOMAIN=.auth-platform.com
# Use leading dot for cross-subdomain cookies

# Email Configuration (optional, for sending emails)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@auth-platform.com

# Redis Configuration (optional, for distributed rate limiting)
REDIS_URL=redis://localhost:6379

# Monitoring & Logging (optional)
SENTRY_DSN=
LOG_LEVEL=info
